/**
 * Custom Styles here.
 *
 * ref：https://v1.vuepress.vuejs.org/config/#index-styl
 */

.home .hero img
  max-width 450px!important
  max-height 100%!important

div[class*="language-html"] pre .code-copy
  right:45px

#app
  min-height: 100%

html, body 
  min-height: 100%

/* 深色模式 */
@media (prefers-color-scheme: dark) {
  body, img {
    filter: invert(1) hue-rotate(.5turn);
  }
  img {
    opacity: .75;    
  }
}